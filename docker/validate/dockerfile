# file: docker/validate/Dockerfile
FROM docker.io/jrottenberg/ffmpeg:6.1-ubuntu
RUN apt-get update && apt-get install -y \
    mediainfo \
    python3 \
    python3-pip \
    curl \
    jq \
    awscli \
    && rm -rf /var/lib/apt/lists/*

# Install pachctl for Pachyderm operations
RUN curl -L -o /usr/local/bin/pachctl https://github.com/pachyderm/pachyderm/releases/download/v2.8.0/pachctl_2.8.0_linux_amd64 \
    && chmod +x /usr/local/bin/pachctl

COPY utils/ /app/utils/
COPY pfs_move.py /app/pfs_move.py
COPY validate.py /app/validate.py
WORKDIR /app
ENTRYPOINT ["python3","/app/validate.py"]