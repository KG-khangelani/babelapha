# file: docker/clamav/Dockerfile
FROM clamav/clamav:latest
RUN apk add --no-cache python3 py3-pip curl jq
# pachctl (linux amd64)
RUN curl -L https://github.com/pachyderm/pachyderm/releases/latest/download/pachctl_2.7.0_linux_amd64.tar.gz \
  | tar -xz && mv pachctl_*/pachctl /usr/local/bin/pachctl && rm -rf pachctl_*
COPY pfs_move.py /app/pfs_move.py
COPY scan.py /app/scan.py
WORKDIR /app
ENTRYPOINT ["python3","/app/scan.py"]