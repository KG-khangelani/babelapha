# file: docker/clamav/Dockerfile
FROM clamav/clamav:latest
RUN apk add --no-cache python3 py3-pip curl jq
# pachctl (linux amd64) - use specific version
RUN curl -L -o /usr/local/bin/pachctl https://github.com/pachyderm/pachyderm/releases/download/v2.8.0/pachctl_2.8.0_linux_amd64 \
  && chmod +x /usr/local/bin/pachctl
COPY pfs_move.py /app/pfs_move.py
COPY scan.py /app/scan.py
WORKDIR /app
ENTRYPOINT ["python3","/app/scan.py"]